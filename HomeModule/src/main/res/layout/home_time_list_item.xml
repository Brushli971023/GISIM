<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:background="#00000000"
    android:layout_width="match_parent"
    android:layout_height="50dp">

    <com.alorma.timeline.RoundTimelineView
        android:id="@+id/timeline1"
        android:layout_width="30dp"
        android:layout_height="match_parent"
        app:timeline_lineColor="#fff"
        app:timeline_indicatorSize="5dp"
        app:timeline_indicatorColor="#fff"
        app:timeline_lineStyle="linear"
        app:timeline_type="middle"/>

    <TextView
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/timeline1"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_toEndOf="@id/timeline1" />
</RelativeLayout>