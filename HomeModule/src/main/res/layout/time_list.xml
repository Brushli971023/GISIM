<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/time_list"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/home_mid_timelist_background"
    android:layout_width="200dp"
    android:layout_height="200dp">

        <TextView
            android:id="@+id/text_mid_list"
            android:padding="5dp"
            android:text="我的活动"
            android:textColor="#fff"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/time_list_exit"
            android:layout_margin="5dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_action_fullscreen_exit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true" />

        <Button
            android:id="@+id/decoration_view"
            android:layout_below="@id/text_mid_list"
            android:background="#fff"
            android:layout_width="match_parent"
            android:layout_height="2dp"/>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/home_sideTimeList"
            android:layout_below="@id/decoration_view"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>


</RelativeLayout>