<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/image_chat_to_header"
        android:src="@drawable/from_header"
        android:layout_margin="20dp"
        android:layout_width="50dp"
        android:layout_height="50dp"/>

    <TextView
        android:id="@+id/text_chat_to_message"
        android:background="@drawable/chat_from"
        android:textSize="30dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/image_chat_to_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/image_chat"
        android:padding="10dp"
        android:visibility="gone"
        android:scaleType="centerCrop"
        android:layout_toRightOf="@id/image_chat_to_header"
        android:background="@drawable/chat_from"
        android:layout_centerHorizontal="true"
        android:layout_width="100dp"
        android:layout_height="100dp"/>

    <ImageView
        android:id="@+id/image_chat_play"
        android:visibility="gone"
        android:src="@drawable/ic_action_chat_video_play"
        android:layout_toRightOf="@id/image_chat_to_header"
        android:padding="10dp"
        android:layout_width="100dp"
        android:layout_height="100dp"/>
</RelativeLayout>