<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_back"
    tools:context="com.bawei6.usermodule.RLActivity">

    <EditText
        android:id="@+id/edit_username"
        android:layout_marginTop="200dp"
        android:hint="用户名"
        android:layout_centerHorizontal="true"
        android:layout_width="300dp"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/edit_password"
        android:hint="密码"
        android:layout_below="@id/edit_username"
        android:layout_centerHorizontal="true"
        android:layout_width="300dp"
        android:layout_height="wrap_content"/>

    <CheckBox
        android:id="@+id/checkbox_remember_pswd"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="55dp"
        android:layout_below="@id/edit_password"
        android:text="记住密码"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/btu_register"
        android:text="注册"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="55dp"
        android:background="@drawable/btu_back"
        android:layout_below="@id/checkbox_remember_pswd"/>

    <Button
        android:id="@+id/btu_login"
        android:text="登录"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/btu_back"
        android:layout_toRightOf="@id/btu_register"
        android:layout_below="@id/checkbox_remember_pswd"/>

</RelativeLayout>
